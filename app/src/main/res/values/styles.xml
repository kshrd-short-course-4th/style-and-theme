<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextLogin" >
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">#33e4209f</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edit_text_login_default_shape</item>
    </style>
    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
    </style>
    <style name="EditTextLogin.TextColor">
        <item name="android:textColor">#160758</item>
    </style>
    <style name="ButtonLogin">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight" >5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/button_login_default_shape</item>
    </style>
</resources>
